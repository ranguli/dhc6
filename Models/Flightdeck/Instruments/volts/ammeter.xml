<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<path>ammeter.ac</path>

<animation>
    <type>material</type>
    <object-name>amp.face</object-name>
    <object-name>ampneedle</object-name>
    <object-name>gen1needle</object-name>
    <object-name>gen2needle</object-name>
    <emission>
        <red>0.028</red>
        <green>0.014</green>
        <blue>0.007</blue>
        <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
</animation>

<animation>
    <type>rotate</type>
    <object-name>ampneedle</object-name>
    <property>systems/electrical/amps</property>
    <interpolation>
        <entry><ind>-30.0</ind><dep>-45.0</dep></entry>
        <entry><ind>30</ind><dep>45.0</dep></entry>
    </interpolation>
        <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.007</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>gen1needle</object-name>
    <property>systems/electrical/gen-load[0]</property>
    <interpolation>
        <entry><ind>-1.0</ind><dep>-45.0</dep></entry>
        <entry><ind>1</ind><dep>45.0</dep></entry>
    </interpolation>
        <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.007</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>gen2needle</object-name>
    <property>systems/electrical/gen-load[1]</property>
    <interpolation>
        <entry><ind>-1.0</ind><dep>-45.0</dep></entry>
        <entry><ind>1</ind><dep>45.0</dep></entry>
    </interpolation>
        <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.007</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <condition>
        <equals>
            <property>controls/electric/ammeter-switch</property>
            <value>-1</value>
        </equals>
    </condition>
    <type>select</type>
    <object-name>gen1needle</object-name>
</animation>

<animation>
    <condition>
        <equals>
            <property>controls/electric/ammeter-switch</property>
            <value>0</value>
        </equals>
    </condition>
    <type>select</type>
    <object-name>ampneedle</object-name>
</animation>

<animation>
    <condition>
        <equals>
            <property>controls/electric/ammeter-switch</property>
            <value>1</value>
        </equals>
    </condition>
    <type>select</type>
    <object-name>gen2needle</object-name>
</animation>

        <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Amp</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.035 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
