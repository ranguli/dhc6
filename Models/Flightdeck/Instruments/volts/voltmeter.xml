<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<path>voltmeter.ac</path>

<animation>
          <type>material</type>
          <object-name>voltbezel</object-name>
          <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
          </emission>
        </animation>

        <animation>
          <type>material</type>
          <object-name>volt.face</object-name>
          <object-name>voltneedle</object-name>
          <object-name>voltneedle.001</object-name>
          <object-name>voltneedle.002</object-name>
          <condition>
            <equals>
              <property>controls/lighting/instrument-lights</property>
              <value>0</value>
            </equals>
          </condition>
          <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
          </emission>
        </animation>

<animation>
    <type>material</type>
    <object-name>volt.face</object-name>
    <object-name>voltneedle</object-name>
    <object-name>voltneedle.001</object-name>
    <object-name>voltneedle.002</object-name>
    <emission>
        <red>0.07</red>
        <green>0.04</green>
        <blue>0.04</blue>
        <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
</animation>

    <effect>
      <inherits-from>Aircraft/dhc6/Models/Effects/interior/dhc6-interior</inherits-from>
      <object-name>volt.face</object-name>
      <object-name>voltbezel</object-name>
      <object-name>voltneedle</object-name>
      <object-name>voltneedle.001</object-name>
      <object-name>voltneedle.002</object-name>
    </effect>

    <effect>
      <inherits-from>Aircraft/dhc6/Models/Effects/interior/dhc6-flashlight</inherits-from>
      <object-name>volt.face</object-name>
      <object-name>voltbezel</object-name>
      <object-name>voltneedle</object-name>
      <object-name>voltneedle.001</object-name>
      <object-name>voltneedle.002</object-name>
    </effect>

<animation>
    <type>rotate</type>
    <object-name>voltneedle</object-name>
    <property>engines/engine[0]/amp-v</property>
    <interpolation>
        <entry><ind>0.0</ind><dep>0.0</dep></entry>
        <entry><ind>30</ind><dep>88.2</dep></entry>
    </interpolation>
    <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.007</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>voltneedle.002</object-name>
    <property>engines/engine[1]/amp-v</property>
    <interpolation>
        <entry><ind>0.0</ind><dep>0.0</dep></entry>
        <entry><ind>30</ind><dep>88.2</dep></entry>
    </interpolation>
    <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.007</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>voltneedle.001</object-name>
    <property>systems/electrical/batt-volts</property>
    <interpolation>
        <entry><ind>0.0</ind><dep>0.0</dep></entry>
        <entry><ind>30</ind><dep>88.2</dep></entry>
    </interpolation>
    <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.007</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>select</type>
    <object-name>voltneedle</object-name>
    <condition>
        <equals>
            <property>controls/electric/ammeter-switch</property>
            <value>-1</value>
        </equals>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>voltneedle.001</object-name>
    <condition>
        <equals>
            <property>controls/electric/ammeter-switch</property>
            <value>0</value>
        </equals>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>voltneedle.002</object-name>
    <condition>
        <equals>
            <property>controls/electric/ammeter-switch</property>
            <value>1</value>
        </equals>
    </condition>
</animation>

          <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Volts</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.035 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>


</PropertyList>
