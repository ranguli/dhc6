	<animation>
		<type>select</type>
		<object-name>NoDME</object-name>
		<condition>
			<or>
				<and>
				  <property>/controls/switches/dme-gps-slave</property>
				  <not><property>/autopilot/route-manager/active</property></not>
				</and>			
